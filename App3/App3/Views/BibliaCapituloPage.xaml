<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Views.BibliaCapituloPage">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Frame>
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,0">
                            <GradientStop Color="White"
                          Offset="0.1"/>
                            <GradientStop Color="White"
                          Offset="2.0"/>
                        </LinearGradientBrush>
                    </Frame.Background>
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="26" />
                        </Grid.RowDefinitions>


                        <StackLayout Grid.Column="0" Grid.Row="0" BackgroundColor="Transparent">
                            <Button  Margin="10,-7,0,0" Text="Livro" BackgroundColor="#527beb"  FontSize="15" Clicked="TapGestureRecognizer_Tapped_livro"   FontFamily="OpenSans-SemiBold" TextColor="White" ></Button>
                        </StackLayout>
                        <StackLayout Grid.Column="1" Grid.Row="0" BackgroundColor="Transparent">
                            <Button  Margin="0,-7,10,0" Text="Capítulo" BackgroundColor="#527beb"  FontSize="15"   FontFamily="OpenSans-SemiBold" TextColor="White" ></Button>
                        </StackLayout>
                    </Grid>

                </Frame>
            </StackLayout>

            <StackLayout Margin="33,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <Frame Grid.Column="0"  BackgroundColor="#527beb" >
                        <Label Text="1" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    </Frame>
                    <Frame Grid.Column="1"  BackgroundColor="#527beb" >
                        <Label Text="2" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    </Frame>
                    <Frame Grid.Column="2"  BackgroundColor="#527beb" >
                        <Label Text="3" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    </Frame>
                    <Frame Grid.Column="3"  BackgroundColor="#527beb" >
                        <Label Text="4" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    </Frame>
                    <Frame Grid.Column="3"  BackgroundColor="#527beb" >
                        <Label Text="5" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    </Frame>
                    <Frame Grid.Column="4"  BackgroundColor="#527beb" >
                        <Label Text="6" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    </Frame>
                </Grid>
                
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>